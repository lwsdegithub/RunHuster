<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/chart_fragment_background"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rectangle_background1"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/userHeadInCF"
                android:src="@drawable/person"
                android:layout_marginLeft="23dp"
                android:layout_gravity="center_vertical"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rectangle_vertical_small"
                android:layout_width="wrap_content"
                android:layout_height="35sp" />
            <TextView
                android:textSize="25sp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:text="锻炼变化曲线"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/stateImgInCF"
                android:layout_marginLeft="25dp"
                android:src="@drawable/state"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/stateImg2InCF"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fire"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="33dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/rectangle_vertical_small"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginLeft="7dp"
                        android:textSize="21sp"
                        android:textColor="#8b49c9"
                        android:layout_gravity="center_vertical"
                        android:text="长跑"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/theLongRunTimeInCF"
                    android:layout_marginLeft="15dp"
                    android:textColor="#8e77a3"
                    android:textSize="22sp"
                    android:text="10:21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#9586a4"
                    android:textSize="21sp"
                    android:gravity="right"
                    android:text="得分"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/theLongRunScoresInCF"
                    android:gravity="right"
                    android:textColor="#ae3390"
                    android:textSize="29sp"
                    android:text="75分"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/lineChartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/saveChartInCF"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="保存图表"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/shareMeInCF"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="社交分享"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>